<h1>
  List of all courses
</h1>

<hr>

<form action="/insert_course" method="post">
  <div>
    <label for="title_box">
      Title
    </label>

    <input type="text" id="title_box" name="query_title">
  </div>

  <div>
    <label for="term_offered_box">
      Term offered
    </label>

    <input type="text" id="term_offered_box" name="query_term">
  </div>

  <div>
    <label for="course_id_box">
      Course
    </label>

    <select id="course_id_box" name="query_course_id">
      <% Course.order({ :title => :asc }).each do |a_course| %>
        <option value="<%= a_course.id %>">
          <%= a_course.title %>
        </option>
      <% end %>
    </select>
  </div>

  <button>
    Create course
  </button>
</form>

<hr>

<table class="table" border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Term offered
    </th>

    <th>
      Department
    </th>

    <th>
    </th>
  </tr>

  <% @course.each do |course| %>
    <tr>
      <td>
        <%= course.id %>
      </td>

      <td>
        <%= course.title %>
      </td>

      <td>
        <%= course.term_offered %>
      </td>

      <td>
        <% course = Course.where({ :id => course.id }).at(0) %>
        <a href="/courses/<%= course.id %>"><%= course.title %></a>
      </td>

      <td>
        <a href="/courses/<%= course.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<hr>
